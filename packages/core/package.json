    "tmp": "^0.2.1",
    "ts-node": "10.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@ethersproject/address": "5.6.1",
    "debug": "^4.3.2",
    "ethers": "^5.4.7",
    "fs-extra": "^10.0.0",
    "ink": "^3.2.0",
    "ink-spinner": "^4.0.3",
    "react": "^17.0.2"
